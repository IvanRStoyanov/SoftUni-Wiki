<main>
    <h1>Welcome to SoftUni Wiki!</h1>
    <section id="featured">
        <h2>Latest article</h2>
        <article>
            <h3>{{lastArticle.title}}</h3>
            <p>
               {{lastArticle.content}}
            </p>
            <div class="controls">
                {{#if lastArticle}}
                <a href="/article/details/{{lastArticle._id}}">Read more</a>
                {{/if}}
            </div>
        </article>
    </section>
    <section id="recent">
        <h2>Recently added articles</h2>
        <ul>
            {{#each articles}}
            <li>
                <a href="/article/details/{{_id}}">{{title}}</a>
            </li>
            {{/each}}
        </ul>
    </section>
</main>